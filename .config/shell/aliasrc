#!/bin/sh

alias \
	vim="nvim" \
	la="ls -a" \
	home="cd $HOME" \
	bib="vim $HOME/.config/bib" \
	ali="vim $HOME/.config/shell/aliasrc" \
	ra='ranger --choosedir=$HOME/.rangerdir; LASTDIR=`cat $HOME/.rangerdir`; cd "$LASTDIR"' \
	lf='ranger --choosedir=$HOME/.rangerdir; LASTDIR=`cat $HOME/.rangerdir`; cd "$LASTDIR"' \
	mpv="mpv --window-scale=0.25" \
	yt="yt-dlp -f 'bestvideo[ext=mp4]+bestaudio[ext=m4a]/mp4'" \
	yta="yt -ci -f 'bestaudio[ext=m4a]'" \
	keymap="vim $HOME/.config/qmk_firmware/keyboards/boardsource/5x12/keymaps/leegerken/keymap.c" \
	webpush="rsync -avz ~/iCloud/Website/ root@leegerken.org:/var/www/leegerken/ --delete" \
	webpull="rsync -avz root@leegerken.org:/var/www/leegerken/ ~/iCloud/leegerken/ --delete" \
	cal="calcurse" \
	cfg="git --git-dir=$HOME/.config/.git/ --work-tree=$HOME" \

alias \
	evim="vim $HOME/.config/nvim/init.vim" \
	ebash="vim $HOME/.bashrc" \
  eprof="vim $HOME/.profile" \
	est="vim $HOME/.local/src/st/config.h" \
	edwm="vim $HOME/.local/src/dwm/config.h" \
	etmux="vim $HOME/.config/tmux/tmux.conf" \
  essh="vim $HOME/.ssh/config" \

alias \
	ta="tmux attach -t" \
	tn="tmux new -s" \
	tl="tmux list-sessions" \
